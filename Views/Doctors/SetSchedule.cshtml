@model AppointAid.ViewModels.WeeklyScheduleViewModel

@{
    ViewData["Title"] = "Set Weekly Schedule";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Set Weekly Schedule</h4>
        </div>
        <div class="card-body">
            <form asp-action="SetSchedule" method="post">
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                    </div>
                    <div class="col">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                    </div>
                </div>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Available</th>
                            <th>Day</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Days.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input asp-for="Days[@i].IsAvailable" type="checkbox" />
                                </td>
                                <td>
                                    <input asp-for="Days[@i].Day" class="form-control" readonly />
                                </td>
                                <td>
                                    <input asp-for="Days[@i].StartTime" type="time" class="form-control" />
                                </td>
                                <td>
                                    <input asp-for="Days[@i].EndTime" type="time" class="form-control" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <button type="submit" class="btn btn-primary">Confirm</button>
            </form>
        </div>
    </div>
</div>