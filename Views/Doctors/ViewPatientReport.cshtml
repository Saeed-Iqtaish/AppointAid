@model AppointAid.Models.PatientReport

@{
    ViewData["Title"] = "Patient Report";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="text-center">Patient Report</h3>
        </div>
        <div class="card-body">
            <p><strong>Patient Name:</strong> @Model.Patient?.FullName</p>
            <p><strong>Sector:</strong> @Model.Sector?.Name</p>
            <p><strong>Symptoms:</strong> @Model.PatientSymptoms</p>
            <p><strong>Severity:</strong> @Model.Severity</p>

            <form asp-action="UpdatePatientReport" method="post">
                <input type="hidden" asp-for="PatientReportId" />
                <div class="mb-3">
                    <label for="Diagnosis" class="form-label">Diagnosis</label>
                    <textarea asp-for="Diagnosis" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label for="Treatment" class="form-label">Treatment</label>
                    <textarea asp-for="Treatment" class="form-control"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>