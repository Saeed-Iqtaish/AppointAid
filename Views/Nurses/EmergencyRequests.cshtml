@model List<AppointAid.Models.EmergencyResponse>

@{
    ViewData["Title"] = "Requested Tests";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white text-center">
            <h3>Requested Tests</h3>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <ul class="list-group">
                    @foreach (var request in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <strong>Patient:</strong> @request.Patient?.FullName <br />
                                <strong>Emergency Type:</strong> @request.EmergencyType
                            </span>
                            <div>
                                <a href="@Url.Action("ReviewEmergency", "Nurses", new { id = request.EmergencyResponseId })" 
                                   class="btn btn-primary">
                                    Review Request
                                </a>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted text-center">No emergency requests available.</p>
            }
        </div>
    </div>
</div>