@model AppointAid.Models.EmergencyResponse

@{
    ViewData["Title"] = "Review Emergency";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white text-center">
            <h3>@Model.Patient?.FullName</h3>
        </div>
        <div class="card-body">
            <form asp-action="ReviewEmergency" asp-controller="Nurses" method="post">
                <input type="hidden" name="id" value="@Model.EmergencyResponseId" />
                <div class="mb-3">
                    <label class="form-label"><strong>Emergency Type</strong></label>
                    <input type="text" class="form-control" value="@Model.EmergencyType" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label"><strong>Emergency Description</strong></label>
                    <textarea class="form-control" readonly>@Model.EmergencyDescription</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label"><strong>Add Comment</strong></label>
                    <textarea class="form-control" name="comments" placeholder="Enter your comments here"></textarea>
                </div>
                <div class="d-flex justify-content-around">
                    <button class="btn btn-primary" type="submit" name="status" value="Critical">Critical</button>
                    <button class="btn btn-secondary" type="submit" name="status" value="Non-critical">Non-critical</button>
                </div>
            </form>
        </div>
    </div>
</div>