@model AppointAid.ViewModels.RequestMedicalTestViewModel

@{
    ViewData["Title"] = "Request Medical Test";
}

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h3 class="text-center mb-4">Request Medical Test</h3>
            <form asp-action="SubmitMedicalTestRequest" method="post">
                <div class="mb-3">
                    <label for="MedicalCenterId" class="form-label">Choose Medical Center</label>
                    <select asp-for="MedicalCenterId" class="form-select" asp-items="Model.MedicalCenters">
                        <option value="">Select</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="TestName" class="form-label">Select Test</label>
                    <select asp-for="TestName" class="form-select">
                        <option value="">Select</option>
                        <option value="Blood Test">Blood Test</option>
                        <option value="X-Ray">X-Ray</option>
                        <option value="MRI">MRI</option>
                        <option value="CT Scan">CT Scan</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="Reason" class="form-label">Reason for Test</label>
                    <textarea asp-for="Reason" class="form-control" rows="4" placeholder="Enter reason for test"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-arrow-right-circle"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>