@model AppointAid.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-4">
    <h2 class="text-center">Login</h2>

    <form method="post" asp-action="Login" class="mt-4">
        <div class="form-group">
            <label for="NationalNumber">National Number</label>
            <input asp-for="NationalNumber" class="form-control" placeholder="Enter your national number" />
            <span asp-validation-for="NationalNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Role">Role</label>
            <select asp-for="Role" class="form-control">
                <option value="Patient">Patient</option>
                <option value="Doctor">Doctor</option>
                <option value="Nurse">Nurse</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Login</button>
            <p class="mt-3">Don't have an account? <a asp-action="Register" asp-controller="Account" class="btn btn-link">Register</a></p>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}